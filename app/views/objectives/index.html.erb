<div class="d-flex justify-content-between align-items-center mb-4 p-3 border-bottom border-secondary">
  <h2 class="h3 text-white mb-0">
    Meus Objetivos <i class="bi bi-list-task ms-2 text-primary"></i>
  </h2>
  <%= link_to new_objective_path, class: "btn btn-primary px-4 py-2 rounded-pill shadow-sm" do %>
    <i class="bi bi-plus-circle me-2"></i> Novo Objetivo
  <% end %>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
  <% @objectives.each do |objective| %>
    <div class="col">
      <div class="card bg-dark text-white border-0 shadow-lg h-100 rounded-4 overflow-hidden position-relative transition-all">

        <% if objective.image.attached? %>
          <div class="position-relative">
            <%= image_tag objective.image, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
            <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(to bottom, rgba(0,0,0,0.4), rgba(0,0,0,0.9));"></div>
          </div>
        <% end %>

        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title position-relative">
            <%= link_to objective.title, objective_path(objective),
                class: "stretched-link text-white text-decoration-none fw-semibold" %>
          </h5>

          <div class="d-flex justify-content-between align-items-center mt-4 small text-muted position-relative">
            <%= link_to "Editar", edit_objective_path(objective),
                class: "text-secondary text-decoration-none me-3 hover-text-primary" %>

            <%= link_to "Deletar", objective_path(objective),
                method: :delete,
                data: { confirm: "Tem certeza?" },
                class: "text-danger text-decoration-none hover-text-light" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
