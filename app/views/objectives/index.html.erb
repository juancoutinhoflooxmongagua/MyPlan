<h1 class="text-4xl font-semibold text-center text-gray-100 mb-10">Meus Objetivos</h1>

<div class="text-center mb-8">
  <%= link_to "Novo Objetivo", new_objective_path, class: "inline-block px-5 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition" %>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @objectives.each do |objective| %>
    <div class="bg-gray-900 border border-gray-700 rounded-xl shadow-md overflow-hidden transition hover:shadow-lg hover:border-gray-600">
      
      <% if objective.image.attached? %>
        <%= image_tag objective.image, class: "w-full h-48 object-cover" %>
      <% end %>

      <div class="p-5 space-y-3">
        <%= link_to objective.title, objective_path(objective),
            class: "block text-xl font-semibold text-gray-100 hover:text-blue-400 transition" %>

        <div class="flex justify-between items-center text-sm">
          <%= link_to "Editar", edit_objective_path(objective),
              class: "text-gray-400 hover:text-gray-200 transition" %>

          <%= link_to "Deletar", objective_path(objective),
              method: :delete,
              data: { confirm: "Tem certeza?" },
              class: "text-red-500 hover:text-red-700 transition" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
